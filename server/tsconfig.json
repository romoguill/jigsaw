{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@jigsaw/shared/*": ["../shared/src/*"]
    },
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src", "**/*.test.ts", "**/*.spec.ts", "vitest.config.ts"],
  "references": [{ "path": "../shared" }]
}
